public static int friendsCallingproblem(int n) {
        if(n == 1 || n == 2) {
            return n;
        }
        int fnm1 = friendsCallingproblem(n-1);
        int fnm2 = friendsCallingproblem(n-2);
        int pairWays = (n-1) * fnm2;
        int totalWays = fnm1 + pairWays;
        return totalWays;
    }
